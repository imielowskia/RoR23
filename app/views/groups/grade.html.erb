<p style="color: green"><%= notice %></p>
<%= form_with url: save_grade_group_url do |form| %>
  <h1>Grupa <%= @group.nazwa %></h1>
  <div class="mb-3">
    <label class="form-label">Oceny z <%= @course.nazwa %>:</label>
    <% @students.each do |s| %>
    <div class="input-group">
      <span class="input-group-text"><%= form.label s.i_n, style: "display: block", class: "" %></span>

      <%= form.number_field 'oceny_'+s.id.to_s, value: @oceny[s.id], class: "form-control form-control-sm"  %>
    </div>
    <% end %>


<div>
  <%= form.submit "Zapisz", class: "btn btn-sm btn-primary" %>  <%=link_to "Zapisz oceny", save_grade_group_path(@group, @course.id) %>      <%= link_to "Back to groups", groups_path, class: "btn btn-success" %>
</div>
<% end %>
